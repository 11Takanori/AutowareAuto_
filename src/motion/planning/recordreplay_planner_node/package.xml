<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>recordreplay_planner_node</name>
  <version>0.0.1</version>
  <description>Instantiation of recordreplay_planner as a ROS 2 node</description>
  <maintainer email="merkli@embotech.com">Sandro Merkli</maintainer>
  <license>Apache License 2.0</license>

  <buildtool_depend>ament_cmake_auto</buildtool_depend>
  <buildtool_depend>autoware_auto_cmake</buildtool_depend>
  <buildtool_depend>rosidl_default_generators</buildtool_depend>

  <depend>recordreplay_planner</depend>
  <depend>rclcpp</depend>
  <depend>rcl_actions</depend>
  <depend>autoware_auto_msgs</depend>
  <depend>tf2</depend>
  <depend>tf2_msgs</depend>
  <depend>action_msgs</depend>

  <exec_depend>rosidl_default_runtime</exec_depend>

  <test_depend>ament_cmake_gtest</test_depend>
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

      <!-- FIXME(s.me) Without the member_of_group below, I get "you need member_of_group", 
          and when it's added I get "The manifest of package "recordreplay_planner_node" 
          (with format version 2) must not contain the following tags: member_of_group".

          When I change manifest to version 3, it says I'm trying to register the 
          library twice. I compared with other packages and they seem to use a different 
          set of actions like autoware_auto_cmake as compared to the ament_cmake_auto here.
          I attempted to make things look like the other packages, but without success so 
          far.
      -->
  <member_of_group>rosidl_interface_packages</member_of_group>

  <export><build_type>ament_cmake</build_type></export>
</package>
